<section class="tab sheet-body flexcol {{tabs.config.cssClass}}"
         data-tab="{{tabs.config.id}}" data-group="{{tabs.config.group}}">

    <fieldset>
        <legend>Talent Configuration</legend>
        {{formField @root.fields.trees value=source.system.trees localize=true rootId=partId}}
        {{formField @root.fields.row value=source.system.row localize=true rootId=partId}}

        {{formGroup fields.isRanked value=source.system.isRanked}}
        {{formGroup fields.activation value=source.system.activation valueAttr="id" labelAttr="name"}}
    </fieldset>

</section>
