<section class="tab sheet-body flexcol scrollable {{tabs.config.cssClass}}"
         data-tab="{{tabs.config.id}}" data-group="{{tabs.config.group}}">
    <fieldset {{fieldDisabled}}>
        <legend>{{localize "WEAPON.SHEET.TYPE"}}</legend>
        {{formField fields.skill value=source.system.skill}}
        {{formField fields.quality value=source.system.quality}}
        {{formField fields.range value=source.system.range localize=true}}
        {{formField fields.damage value=source.system.damage}}
        {{formField fields.crit value=source.system.crit}}
    </fieldset>

    <fieldset class="item-properties" {{fieldDisabled}}>
        <legend>{{fields.qualities.label}}</legend>
        {{formField fields.qualities value=item.system.qualities widget=qualitiesWidget}}
    </fieldset>

    <fieldset class="item-equipment" {{fieldDisabled}}>
        <legend>{{localize "WEAPON.SHEET.EQUIPMENT"}}</legend>
        {{#if source.system.equipped}}
            {{formField fields.slot value=source.system.slot options=equipmentSlots
                                                  classes="slot" hint=false}}
        {{/if}}

        {{formField fields.equipped value=source.system.equipped}}
        {{formField fields.broken value=source.system.broken}}
        {{formField fields.hardPoints value=source.system.hardPoints classes="slim"}}
        {{formField fields.encumbrance value=source.system.encumbrance classes="slim"}}
        {{formField fields.rarity value=source.system.rarity classes="slim"}}
        {{formField fields.price value=source.system.price classes="slim"}}
    </fieldset>
</section>
