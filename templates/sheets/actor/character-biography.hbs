<section class="tab flexcol {{tabs.biography.id}} {{tabs.biography.cssClass}}"
         data-tab="{{tabs.biography.id}}" data-group="{{tabs.biography.group}}">
    <div class="sheet-section flexrow notableFeatures">
        <h3>{{fields.details.fields.biography.fields.notableFeatures.label}}</h3>
        {{formInput fields.details.fields.biography.fields.notableFeatures
                    value=source.system.details.biography.notableFeatures
                    enriched=biography.notableFeatures toggled=true compact=true}}

        <fieldset class="standard-form">
            <legend>Details</legend>
            {{formGroup fields.details.fields.biography.fields.gender value=source.system.details.biography.gender
                        classes="slim"}}
            {{formGroup fields.details.fields.biography.fields.age value=source.system.details.biography.age
                        classes="slim"}}
            {{formGroup fields.details.fields.biography.fields.height value=source.system.details.biography.height
                        classes="slim"}}
            {{formGroup fields.details.fields.biography.fields.build value=source.system.details.biography.build
                        classes="slim"}}
            {{formGroup fields.details.fields.biography.fields.hair value=source.system.details.biography.hair
                        classes="slim"}}
            {{formGroup fields.details.fields.biography.fields.eyes value=source.system.details.biography.eyes
                        classes="slim"}}
        </fieldset>

    </div>

    <div class="sheet-section flexcol">
        <h3>{{fields.details.fields.biography.fields.public.label}}</h3>
        {{formInput fields.details.fields.biography.fields.public value=source.system.details.biography.public
                    enriched=biography.public toggled=true}}
    </div>

    <div class="sheet-section flexcol">
        <h3>{{fields.details.fields.biography.fields.private.label}}</h3>
        {{formInput fields.details.fields.biography.fields.private value=source.system.details.biography.private
                    enriched=biography.private toggled=true}}
    </div>

</section>

